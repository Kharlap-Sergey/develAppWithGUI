<Window x:Class="task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task1"
        mc:Ignorable="d"
        Title="Лаб. раб. №2 ст.гр.10701219 Харлап С.А." 
        Height="700" Width="500"
        Background="AntiqueWhite">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Style.Setters>
                <Setter Property="Foreground" Value="Black" />
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Foreground" Value="Red" />
                    <Setter Property="Background" Value="Aquamarine" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="Button.IsEnabled" Value="False"/>
            </Style.Setters>
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding ElementName=XTextBox, 
                            Path=Foreground}" Value="Black"/>
                        <Condition Binding="{Binding ElementName=YTextBox, 
                            Path=Foreground}" Value="Black"/>
                        <Condition Binding="{Binding ElementName=ZTextBox, 
                            Path=Foreground}" Value="Black"/>
                    </MultiDataTrigger.Conditions>
                    <MultiDataTrigger.Setters>
                        <Setter Property="Button.IsEnabled" Value="True"/>
                    </MultiDataTrigger.Setters>
                </MultiDataTrigger>

            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="3"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Border MinHeight="50" >
                <CheckBox x:Name="maxCalculationCheckBox"
                          VerticalAlignment="Center"
                          >
                    MaxAbs
                </CheckBox>
            </Border>
            <StackPanel x:Name="FormulaChoseStackPanel">
                <RadioButton GroupName="Formula" 
                             Content="Cos(x)"
                             Checked ="FormulaChoseStackPanel_Checked"/>
                <RadioButton GroupName="Formula" 
                             Content="Sin(x)"
                             Checked ="FormulaChoseStackPanel_Checked"/>
                <RadioButton GroupName="Formula" 
                             Content="lg(x)"
                             Checked ="FormulaChoseStackPanel_Checked"/>
            </StackPanel>
            
        </StackPanel>
        <Label FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Grid.Row="0" Margin="26,10,25.625,10"
               >X =</Label>
        <Label FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Grid.Row="1" Margin="26,10,25.625,10"
               >Y =</Label>
        <Label FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Grid.Row="2" Margin="26,9,25.625,9.2"
               >Z =</Label>
        <TextBox x:Name="XTextBox" 
                 FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="lEFT"
               Grid.Row="0"
               Grid.Column="1"
               MinHeight="50"
               MinWidth="50"
               BorderBrush="Black" 
               >
            <TextBox.Text>
                <Binding
                    Path="X" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <TextBox x:Name="YTextBox" 
                FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="lEFT"
               Grid.Row="1"
               Grid.Column="1"
               MinHeight="50"
               MinWidth="50"
               BorderBrush="Black" 
               >
            <Binding
                    Path="Y" Mode="TwoWay">
                <Binding.ValidationRules>
                    <ExceptionValidationRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBox FontSize="20"
                 x:Name="ZTextBox"
               VerticalAlignment="Center"
               HorizontalAlignment="lEFT"
               Grid.Row="2"
               Grid.Column="1"
               MinHeight="50"
               MinWidth="50"
               BorderBrush="Black" 
               >
            <Binding
                    Path="Z" Mode="TwoWay">
                <Binding.ValidationRules>
                    <ExceptionValidationRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <Label FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Row="3"
               Padding="5"
               Grid.ColumnSpan ="3"
               >Результат выполнения программы:</Label>

        <ScrollViewer Grid.ColumnSpan="3" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Height="300"
                       Width="400"
                       Grid.Row="4"
                       HorizontalScrollBarVisibility="Visible"
                   >
            <TextBlock ScrollViewer.CanContentScroll="True" 
                       x:Name="ResultTextBlock"
                       Padding="8"
                       FontSize="20"
                       Background="White"/>
        </ScrollViewer>
        
        <Button x:Name="ExecuteButton" 
                Grid.ColumnSpan="3" 
                Grid.Row="4"
                FontSize="30" Click="ExecuteButton_Click" Margin="0,390.8,-0.975,0.4" Grid.RowSpan="2">Вычислить</Button>
    </Grid>
</Window>
